<Window x:Class="MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlashCards2016"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" Closed="Window_Closed" Loaded="Window_Loaded" >
    <DockPanel>
        <Button  Name="ChangeCard">
            <StackPanel Orientation="Horizontal">
                <TextBlock  Name="LetterBox" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Text="Click to start" 
                            TextBlock.FontWeight="Normal" 
                            TextBlock.FontSize="300" 
                            TextWrapping="Wrap" 
                            TextBlock.FontFamily="Comic Sans MS" />
            </StackPanel>
        </Button>
    </DockPanel>
</Window>